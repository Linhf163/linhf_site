{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./public",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@action/*": ["./src/redux/action/*"],
      "@/*": ["./src/*"]
    },
    "preserveConstEnums": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "./dist/**/*", "./public/**/*"],
  /** 需要指定 files */
  "files": ["./src/index.tsx"]
}
